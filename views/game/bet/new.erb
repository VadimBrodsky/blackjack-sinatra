<h1>Hi <%= @player.name %></h1>
<p>
  You have <strong>$<%= @player.money %></strong>.
  Please make a bet for this round.
</p>

<form class="form-inline" action="/game/bet" method="post">
  <div class="form-group">
    <label for="name">Bet:</label>
    <input type="text" name="bet" value="" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
