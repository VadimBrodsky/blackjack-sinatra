<!-- <h1>Blackjack</h1> -->

<h3><%= @dealer.name %>'s Cards</h3>
<% @dealer.hand.each_with_index do |card, index| %>
<% if (index + 1) % 4 == 1 %>
<div class="row">
<% end %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="thumbnail card-container">
      <img src="/images/cards/<%= image_name(card) %>" alt="card" class="card <%= card.nil? ? 'card--cover': ''%>" />
    </div>
  </div>
  <% if (index + 1) % 4 == 0 || (index + 1) == @dealer.hand.count %>
</div>
<% end %>
<% end %>

<% if @dealer.playing? %>
<form class="form-inline" action="/game/dealer" method="post">
    <button type="submit" class="btn btn-primary">See Dealer's next card</button>
</form>
<% end %>

<h3><%= @player.name %>'s Cards</h3>
<% @player.hand.each_with_index do |card, index| %>
<% if (index + 1) % 4 == 1 %>
<div class="row">
<% end %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="thumbnail card-container">
      <img src="/images/cards/<%= image_name(card) %>" alt="card" class="card <%= card.nil? ? 'card--cover': ''%>" />
    </div>
  </div>
  <% if (index + 1) % 4 == 0 || (index + 1) == @player.hand.count %>
</div>
<% end %>
<% end %>

<% if @player.playing? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @player.name %>, choose an action:</h3>
  </div>
  <div class="panel-body">
    <form class="form-inline" action="/game/hit" method="post">
        <button type="submit" class="btn btn-success">Hit</button>
    </form>

    <form class="form-inline" action="/game/stay" method="post">
        <button type="submit" class="btn btn-warning">Stay</button>
    </form>
  </div>
</div>
<% end %>
